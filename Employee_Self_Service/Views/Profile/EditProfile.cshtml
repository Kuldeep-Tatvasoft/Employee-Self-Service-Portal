@model Employee_Self_Service_DAL.ViewModel.ProfileViewModel
@{
    Layout = "_Layout";
}

<div class="d-flex flex-column py-3 px-1">
    <div class="px-3 d-flex justify-content-between align-items-center">
        <h4 class=" d-flex align-content-center m-0">Member Profile</h4>
        <button type="button" class="btn btn-white border-primary text-primary"> <a href="/Home/Index"
                class=" text-decoration-none">
                < Back</a> </button>
    </div>
    <hr class="dropdown-divider">


    <div class="details p-3">
        <div class="details form">
            <form asp-action="EditProfile" asp-controller="Profile" method="post" enctype="multipart/form-data">
               
            <div class="row">
                <input type="hidden" asp-for="@Model.EmployeeId">
                <div class="row mb-sm-0 p-2 mb-3">

                    <div class="d-flex justify-content-start align-items-center gap-3 img-fluid">

                        <img src=" @(!string.IsNullOrEmpty(Model.ProfileImage) ? Model.ProfileImage : "../images/Default_pfp.svg.png")" alt="User Avatar" class="rounded-circle "
                            onclick="document.getElementById('profile-chooser').click()" width="120" />
                            <input type="file" class="form-control d-none" id="profile-chooser" placeholder="First Name" asp-for="@Model.FormFile">
                            @* <input type="file"  id="file"  asp-for="@Model.ProfileImage2"> *@
                        <div>
                            <h2 class="">@Model.Name</h2>
                            
                            <span>@Model.Email</span>
                        </div>
                    </div>

                </div>

                <!-- Employee Details -->

               <div class="col p-3 ">
                    
                    <div class="row col col-xxl-10 col-xl-11 col-lg-12 ">
                        <div class="col-xl-6 col-lg-12 p-0 m-0">
                            <table class="table col table-bordered m-0">
                                <tr>
                                    <th class="heading col-lg- col-md-5 col-sm-6 col-6 " >Full Name:</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th >Starting Date:</th>
                                    <td>@Model.StartingDate</td>
                                </tr>
                                <tr>
                                    <th>Experience:</th>
                                    <td>@Model.Experience Years</td>
                                </tr>
                                <tr>
                                    <th>Department:</th>
                                    <td>@Model.Department</td>
                                </tr>
                                <tr>
                                    <th>Designation:</th>
                                    <td>@Model.Designation</td>
                                </tr>
                                <tr>
                                    <th>Blood Group:</th>
                                    @* <td><input type="text" class="form-control rounded-0 shadow-none border-2" id="BloodGroup" asp-for="@Model.BloodGroup"></td> *@
                                    <td><input type="text" class="form-control rounded-0 shadow-none border-2" id="BloodGroup" asp-for="@Model.BloodGroup" value=" " autocomplete="on" aria-invalid="false"  aria-required="false" ></td>
                                </tr>
                                <tr>
                                    <th>Any Diseases:</th>
                                    @* <td><textarea asp-for="@Model.AnyDiseases" class="form-control rounded-0 shadow-none border-2" rows="4" placeholder = " " value=" " ></textarea></td> *@
                                    <td><textarea  asp-for="@Model.AnyDiseases" class="form-control rounded-0 shadow-none border-2" rows="4" aria-required="false" aria-invalid="false"> </textarea></td>

                                </tr>
                            </table>

                        </div>
                        <div class="col-12 col-sm-12 col-xl-6 p-0 col-lg-m-0">
                            
                            <table class="table col table-bordered">
                                <tr>
                                    <th class="col-md-5 col-sm-6 col-6">Date Of Birth:</th>
                                    <td>
                                        <input type="date" class="form-control w-100" id="dateOfBirth" asp-for="@Model.DateOfBirth" value="@Model.DateOfBirth" >
                                    </td>
                                </tr>
                                <tr>
                                    <th>Gender:</th>
                                    <td class=""> <select  class="form-select d-flex align-content-end align-items-end justify-content-end  " id="Gender" asp-for="@Model.Gender">
                                    <option value="">Select a Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select></td>
                                </tr>
                                <tr>
                                    <th>Card Number:</th>
                                    <td>@Model.CardNumber</td>
                                </tr>
                                <tr>
                                    <th>Seating Location:</th>
                                    <td>@Model.SeatingLocation</td>
                                </tr>
                                <tr>
                                    <th>Reporting Person:</th>
                                    <td>@Model.ReportingPerson</td>
                                </tr>
                                <tr>
                                    <th>Project Manager:</th>
                                    <td>@Model.ProjectManager</td>
                                </tr>
                                <tr>
                                    <th class="">Emergency Contact No*:</th>
                                    <td><input type="text" class="form-control rounded-0 shadow-none border-2" id="Phone" asp-for="ContactNo" value="@Model.ContactNo"></td>
                                </tr>
                            </table>
                        </div>
                        <div class="d-flex justify-content-end mt-4 gap-2">
                            <button type="submit" id="customDateApplyModel" class="btn btn-primary">Save</button>
                            <a href="/Profile/MyProfile" ><button type="button" class="btn btn-white text-primary border-primary">Cancel</button></a>
                        </div>
                    </div>

                </div>
            </div>
            </form>
            
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

    