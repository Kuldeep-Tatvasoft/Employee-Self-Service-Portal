<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        const fileInput = document.getElementById('actual');
        const fileList = document.getElementById('fileList');
        const selectedFiles = [];
        const documentValidation = document.getElementById('documentValidation');

        fileInput.addEventListener('change', function () {
            const files = Array.from(fileInput.files);
            selectedFiles.push(...files);
            fileList.innerHTML = '';
            documentValidation.textContent = ''; // Clear validation message
            selectedFiles.forEach((file, index) => {
                const listItem = document.createElement('li');
                listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                listItem.textContent = file.name;

                const removeButton = document.createElement('button');
                removeButton.className = 'btn btn-danger btn-sm';
                removeButton.textContent = 'Remove';
                removeButton.addEventListener('click', function () {
                    selectedFiles.splice(index, 1);
                    listItem.remove();
                });

                listItem.appendChild(removeButton);
                fileList.appendChild(listItem);
            });
        });

        $(document).off('submit').on("submit", "#eventForm", function (e) {
            e.preventDefault();
            if (!$(this).valid()) return;

            if (selectedFiles.length === 0) {
                documentValidation.textContent = 'Please select at least one document.';
                return;
            }

            var formData = new FormData(this);
            selectedFiles.forEach(file => {
                formData.append('Documents', file);
            });

            $.ajax({
                url: '/Event/AddEvent',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        window.location.href = '/Home/Index';
                    } else {
                        window.location.href = '/Event/AddEvent';
                    }
                },
                error: function (error) {
                    alert('Error adding event. Please try again.');
                }
            });
        });

        $(document).ready(function () {
            var today = new Date().toISOString().split("T")[0];
            $("#StartDate, #EndDate").attr("min", today);

            $("#StartDate").on("change", function () {
                var eventStart = $(this).val();
                $("#EndDate").attr("min", eventStart);
            });

            $("#EndDate").on("change", function () {
                var eventEnd = $(this).val();
                $("#StartDate").attr("max", eventEnd);
            });
        });
    });
</script>
